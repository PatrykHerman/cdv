#konwersja
x = '5'
print(type(x))
x = int(x)
print(type(x))
x = float (x)
print(type(x))
print(x)

y = 5
print(type(y))
y = y / 2
print(type(y))

nazwisko = "Kowalski"
print (nazwisko[0])
print (nazwisko[0:3])
print (nazwisko[-2])
print (nazwisko[-2:])
print (nazwisko[:-2])
print (nazwisko[:-2:2])















